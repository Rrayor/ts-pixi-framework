{
  "name": "ts-pixi-framework",
  "version": "0.0.1",
  "description": "A personal project. An entity component system and some other utilities built around Pixi JS.  Hoping to use it in future projects of mine.",
  "private": true,
  "scripts": {
    "test": "test",
    "dev": "webpack serve --open --hot",
    "lint": "eslint */**/*.{js,ts,tsx} --quiet --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rrayor/ts-pixi-framework.git"
  },
  "keywords": [
    "pixijs",
    "pixi",
    "typescript",
    "game",
    "2D",
    "ecs"
  ],
  "author": "Benjamin Simon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rrayor/ts-pixi-framework/issues"
  },
  "homepage": "https://github.com/Rrayor/ts-pixi-framework#readme",
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.13",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/types": "^7.13.13",
    "@types/node": "^14.14.37",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^5.2.0",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.18",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "pixi.js": "^6.0.1"
  }
}
